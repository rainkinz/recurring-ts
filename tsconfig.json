{
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "rootDirs": ["./src"],
    "paths": {
      "src/*": ["./src/*"],
      "types/*": ["./types/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest"]
  },
  "include": ["src"]
}
